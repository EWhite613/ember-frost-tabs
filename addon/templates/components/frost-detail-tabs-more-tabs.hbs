{{! Template for the frost-detail-tabs-more-tabs component }}

{{frost-text
  class=(concat css '-filter')
  hook=(concat hookPrefix '-filter')
  placeholder='Refine'
  onInput=(action '_filterTabs')
}}

{{resize-detector (concat '.' css '-container') on-resize=(action '_resize')}}

{{#frost-scroll
  class=(concat css '-container')
  hook=(concat hookPrefix '-container')
}}
  {{#each _columns key='@index' as |column|}}
    <div class='{{css}}-column'>
      {{#each column key='id' as |tab|}}
        <button
          class='{{css}}-element'
          {{action onSelect tab.id}}
        >
          {{tab.label}}
        </button>
      {{/each}}
    </div>
  {{/each}}
{{/frost-scroll}}
