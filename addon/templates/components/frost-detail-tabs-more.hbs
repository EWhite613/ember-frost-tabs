{{! Template for the qp-tabs-more component }}

{{#frost-detail-tab
  class=(concat css '-tab')
  hook=(concat hookPrefix '-tab')
  register=(action '_register')
  selectedTab=selectedTab
  tab=_tab
  viewport=(hash scrollLeft=0 width=10000)
  onSelect=onSelect
}}
  {{frost-icon
    class=(concat css '-tab-icon')
    hook=(concat hookPrefix '-tabIcon')
    icon='add'
    pack='frost'
  }}
  {{_tab.label}}
{{/frost-detail-tab}}

{{#if (eq selectedTab.id _tab.id)}}
  {{to-elsewhere
    named=targetOutlet
    send=(component 'frost-detail-tabs-more-tabs'
      tabs=_tabs
      onSelect=onSelect
    )
  }}
{{/if}}
